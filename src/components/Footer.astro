---
import { YOUTUBE_URL } from "../consts";
---

<footer class="w-full bg-card inset-shadow-lg text-text">
  <div class="max-w-7xl mx-auto px-5 lg:px-10 py-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
      <!-- Social Links -->
      <div
        class="flex flex-col items-center md:items-start text-center md:text-left"
      >
        <h4 class="text-md font-semibold mb-2">Connect</h4>
        <p class="text-sm font-light">Follow Kenyon Bowers on social media.</p>
        <div class="flex gap-3">
          <a
            href={YOUTUBE_URL}
            target="_blank"
            aria-label="YouTube"
            class="p-2 rounded-md bg-white/10 hover:bg-white/20 transition"
            rel="noopener noreferrer"
          >
            <!-- YouTube SVG -->
            <svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24">
              <path
                fill="currentColor"
                d="M8.051 1.999h.089c.822.003 4.987.033 6.11.335a2.01 2.01 0 0 1 1.415 1.42c.101.38.172.883.22 1.402l.01.104.022.26.008.104c.065.914.073 1.77.074 1.957v.075c-.001.194-.01 1.108-.082 2.06l-.008.105-.009.104c-.05.572-.124 1.14-.235 1.558a2.01 2.01 0 0 1-1.415 1.42c-1.16.312-5.569.334-6.18.335h-.142c-.309 0-1.587-.006-2.927-.052l-.17-.006-.087-.004-.171-.007-.171-.007c-1.11-.049-2.167-.128-2.654-.26a2.01 2.01 0 0 1-1.415-1.419c-.111-.417-.185-.986-.235-1.558L.09 9.82l-.008-.104A31 31 0 0 1 0 7.68v-.123c.002-.215.01-.958.064-1.778l.007-.103.003-.052.008-.104.022-.26.01-.104c.048-.519.119-1.023.22-1.402a2.01 2.01 0 0 1 1.415-1.42c.487-.13 1.544-.21 2.654-.26l.17-.007.172-.006.086-.003.171-.007A100 100 0 0 1 7.858 2zM6.4 5.209v4.818l4.157-2.408z"
              >
              </path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Contact Info -->
      <div
        class="flex flex-col items-center md:items-start text-center md:text-left"
      >
        <h4 class="text-md font-semibold mb-2">Contact</h4>
        <address class="not-italic text-sm font-light space-y-2">
          <div>{"<>"}</div>
          <div>
            <a href="tel:+<>" class="hover:underline">({"<>"}) {"<>"}-{"<>"}</a>
          </div>
          <div>
            <a href="mailto:<>" class="hover:underline">{"<>"}</a>
          </div>
        </address>
      </div>

      <!-- Mark 16:15 -->
      <div
        class="flex flex-col items-center md:items-start text-center md:text-left"
      >
        <h4 class="text-md font-semibold mb-2">Mark 16:15</h4>
        <p class="text-sm font-light">
          "And he said unto them, Go ye into all the world, and preach the
          gospel to every creature."
        </p>
      </div>
    </div>

    <div class="mt-8 border-t border-white/20 pt-4">
      <div class="text-center text-sm font-light opacity-90">
        &copy; 5785 Kenyon Bowers. All rights reserved.
      </div>
    </div>
  </div>
</footer>
